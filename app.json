{
  "expo": {
    "name": "The Memory Pulse",
    "slug": "memory-retention-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.memorypulse.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSUserNotificationUsageDescription": "The Memory Pulse sends daily reminders to help you build a memory habit."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1a1a2e"
      },
      "permissions": [
        "POST_NOTIFICATIONS",
        "SCHEDULE_EXACT_ALARM",
        "RECEIVE_BOOT_COMPLETED"
      ],
      "package": "com.memorypulse.app"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "color": "#4A90E2",
          "defaultChannel": "default"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "b3b32d74-bf3b-4dc9-9d1c-a46cc24448f8"
      }
    },
    "owner": "tanner.francis11"
  }
}
